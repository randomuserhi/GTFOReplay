{ 
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "build",
    "module": "ES2022",
    "moduleResolution": "Node",
    "target": "ES2021",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": false,
    "paths": {
      "@root/*": ["../assets/src/*"],
      "@/*": ["./@types/*"],
      "@anim/*": ["./src/modules/renderer/animations/*"],
      "troika-three-text": ["./@types/troika-three-text"],

      // @esm aliases for babel support for the modules folder
      "@esm/@root/*": ["../assets/src/*"],
      "@esm/@/*": ["./@types/*"],
      "@esm/@anim/*": ["./src/modules/renderer/animations/*"],
      "@esm/troika-three-text": ["./@types/troika-three-text"],
      "@esm/three": ["./node_modules/@types/three"]
    }
  },
  "include": ["./src/**/*"]
}