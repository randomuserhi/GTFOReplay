{ 
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "build",
    "module": "ES2022",
    "moduleResolution": "Node",
    "target": "ES2021",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": false,
    "paths": {
      "@/*": ["./@types/*"]
    }
  },
  "include": ["./src/**/*"]
}