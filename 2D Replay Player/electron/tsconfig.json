{ 
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "rootDir": "./src",
    "outDir": "build",
    "target": "ES2021",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": false
  },
  "exclude": [ "node_modules", "build" ] 
}